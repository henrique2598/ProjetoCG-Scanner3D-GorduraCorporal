#:kivy 2.3.0

#Widgets

<TelaInicial>:
    canvas:
        Color:
            rgba: 0, 0, 1, 1    # Blue
        Rectangle:
            size: self.width, self.height
    Button:
        id: Btn_Iniciar
        size_hint: 0.233, 0.0786
        pos: root.center_x - (self.width/2), root.center_y - (self.height/2)
        text:"Iniciar"
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'software'
    Button:
        id: Btn_Creditos
        size_hint: 0.233, 0.0786
        pos: root.center_x - 3*(self.width/2), root.center_y - (self.height/2)
        text:"Créditos"
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'creditos'
    Button:
        id: Btn_Configurações
        size_hint: 0.233, 0.0786
        pos: root.center_x + (self.width/2), root.center_y - (self.height/2)
        text:"Configurações"
        on_release:
            root.manager.transition.direction = 'up'
            root.manager.current = 'configuracoes' 


<TelaCreditos>:
    canvas:
        Color:
            rgba: 0, 1, 0, 1    # Green
        Rectangle:
            size: self.width, self.height
    Button:
        id: Btn_Voltar
        size_hint: 0.0574, 0.09742
        pos: root.center_x - 8*self.width, root.center_y + 225
		background_normal: 'Assets/img/Btn_Voltar.png'
        background_down: 'Assets/img/Btn_Voltar_Pressed.png'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'inicial'


<TelaConfiguracoes>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1    # Red
        Rectangle:
            size: self.width, self.height
    Button:
        id: Btn_Voltar
        size_hint: 0.0574, 0.09742
        pos: root.center_x - 8*self.width, root.center_y + 225
		background_normal: 'Assets/img/Btn_Voltar.png'
        background_down: 'Assets/img/Btn_Voltar_Pressed.png'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'inicial'




<TelaSoftware>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1    # white
        Rectangle:
            size: self.width, self.height
    
    TextInput:
        id: input_name
        hint_text:'Insira o seu nome'
        size_hint: 0.10, 0.10
        pos: root.center_x - 3*(self.width/2), root.center_y + (self.height/2)
        on_text: app.process()

    Label:
        id: label_name
        text:'Nome'
        size_hint: 0.10, 0.10
        pos: input_name.center_x - 100, root.center_y + (self.height/2)

    TextInput:
        id: input_sexo
        hint_text:'Insira o seu sexo'
        size_hint: 0.10, 0.10
        pos: root.center_x - (self.width/2), root.center_y + (self.height/2)
        on_text: app.process()

    Label:
        id: label_sexo
        text:'Sexo'
        size_hint: 0.10, 0.10
        pos: input_sexo.center_x - 100, root.center_y + (self.height/2)
    
    TextInput:
        id: input_idade
        hint_text:'Insira a sua idade'
        size_hint: 0.10, 0.10
        pos: root.center_x + (self.width/2), root.center_y + (self.height/2)
        on_text: app.process()

    Label:
        id: label_idade
        text:'Idade'
        size_hint: 0.10, 0.10
        pos: input_idade.center_x - 100, root.center_y + (self.height/2)

    TextInput:
        id: input_etnia
        hint_text:'Insira a sua etnia'
        size_hint: 0.10, 0.10
        pos: root.center_x - 3*(self.width/2), root.center_y - (self.height/2)
        on_text: app.process()

    Label:
        id: label_etnia
        text:'Etnia'
        size_hint: 0.10, 0.10
        pos: input_etnia.center_x - 100, root.center_y + (self.height/2)

    TextInput:
        id: input_altura
        hint_text:'Insira a sua altura (cm)'
        size_hint: 0.10, 0.10
        pos: root.center_x - (self.width/2), root.center_y - (self.height/2)
        on_text: app.process()

    Label:
        id: label_altura
        text:'Altura'
        size_hint: 0.10, 0.10
        pos: input_altura.center_x - 100, root.center_y + (self.height/2)
        
    TextInput:
        id: input_peso
        hint_text:'Insira o seu peso (gramas)'
        size_hint: 0.10, 0.10
        pos: root.center_x + (self.width/2), root.center_y - (self.height/2)
        on_text: app.process()

    Label:
        id: label_peso
        text:'Peso'
        size_hint: 0.10, 0.10
        pos: label_peso.center_x - (self.width/2), root.center_y + (self.height/2)
