#:kivy 2.3.0

#Widgets
<TelaSoftware>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0    # white
        Rectangle:
            size: self.width, self.height

    canvas:
        Color:
            rgba: (0,1,0,0.25)
        RoundedRectangle:
            size : 0.9*root.width, 0.25*self.height
            pos : root.center_x - (0.9*self.width/2), root.center_y - 3.7*(0.25*self.height/2)
            radius: [(40, 40), (40, 40), (40, 40), (40, 40)]
    
    
    TextInput:
        id: input_name
        hint_text:'Insira o seu nome'
        size: 0.25*root.width, 0.0725*root.height
        pos: root.center_x - (0.9*root.width/2)+ 0.025*root.width, root.center_y - 3.5*(0.25*root.height/2) + 0.125*root.width/2
        multiline: False
        font_size: self.height*0.6
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0, 1
        padding_x: 20
        on_text: app.process()

    Label:
        id: label_name
        text:'Nome'
        pos: input_name.right - input_name.width, input_name.top
        color: (0,0,0,1)
        size_hint: input_name.size_hint
        font_size: self.height*0.25
        text_size: self.size
        halign: "left"
        valign: "bottom"

    TextInput:
        id: input_idade
        hint_text:'Insira a sua idade'
        size: 0.25*root.width, 0.0725*root.height
        pos: input_name.right + 0.01*root.width, input_name.top - self.height
        multiline: False
        font_size: self.height*0.6
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0, 1
        padding_x: 20
        on_text: app.process()

    Label:
        id: label_idade
        text:'Idade'
        pos: input_idade.right - input_idade.width, input_idade.top
        color: (0,0,0,1)
        size_hint: input_idade.size_hint
        font_size: self.height*0.25
        text_size: self.size
        halign: "left"
        valign: "bottom"

    TextInput:
        id: input_sexo
        hint_text:'Insira o seu sexo'
        size: 0.25*root.width, 0.0725*root.height
        pos: input_idade.right + 0.01*root.width, input_idade.top - self.height
        multiline: False
        font_size: self.height*0.6
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0, 1
        padding_x: 20
        on_text: app.process()

    Label:
        id: label_sexo
        text:'Sexo'
        pos: input_sexo.right - input_sexo.width, input_sexo.top
        color: (0,0,0,1)
        size_hint: input_sexo.size_hint
        font_size: self.height*0.25
        text_size: self.size
        halign: "left"
        valign: "bottom"

    TextInput:
        id: input_etnia
        hint_text:'Insira a sua etnia'
        size: 0.25*root.width, 0.0725*root.height
        pos: input_name.right - self.width, input_name.top - 2.75*self.height
        multiline: False
        font_size: self.height*0.6
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0, 1
        padding_x: 20
        on_text: app.process()

    Label:
        id: label_etnia
        text:'Etnia'
        pos: input_etnia.right - input_etnia.width, input_etnia.top
        color: (0,0,0,1)
        size_hint: input_etnia.size_hint
        font_size: self.height*0.25
        text_size: self.size
        halign: "left"
        valign: "bottom"

    TextInput:
        id: input_peso
        hint_text:'Insira o seu peso (g)'
        size: 0.25*root.width, 0.0725*root.height
        pos: input_etnia.right + 0.01*root.width, input_etnia.top - self.height
        multiline: False
        font_size: self.height*0.6
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0, 1
        padding_x: 20
        on_text: app.process()

    Label:
        id: label_peso
        text:'Peso'
        pos: input_peso.right - input_peso.width, input_peso.top
        color: (0,0,0,1)
        size_hint: input_peso.size_hint
        font_size: self.height*0.25
        text_size: self.size
        halign: "left"
        valign: "bottom"
    
    TextInput:
        id: input_altura
        hint_text:'Insira a sua altura (cm)'
        size: 0.25*root.width, 0.0725*root.height
        pos: input_peso.right + 0.01*root.width, input_peso.top - self.height
        multiline: False
        font_size: self.height*0.6
        background_color: 1, 1, 1, 1
        cursor_color: 0, 0, 0, 1
        padding_x: 20
        on_text: app.process()

    Label:
        id: label_altura
        text:'Altura'
        pos: input_altura.right - input_altura.width, input_altura.top
        color: (0,0,0,1)
        size_hint: input_altura.size_hint
        font_size: self.height*0.25
        text_size: self.size
        halign: "left"
        valign: "bottom"
        
    Button:
        id: button_calcular
        text: "Calcular"
        pos: root.center_x, root.center_y

    Button:
        id: button_relatório
        text: "Gerar Relatório"
        pos: root.center_x - 100, root.center_y
        
    Button:
        id: button_refazer
        text: "Refazer Captura"
        pos: root.center_x+100, root.center_y



