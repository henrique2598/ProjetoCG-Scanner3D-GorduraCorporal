#:kivy 2.3.0

#Widgets
<TelaSoftware>:
    Image:
        id: logo
        size: 100, 100
        pos: 0, root.top-100
        source: 'Assets\img\Btn_Voltar.png'
    Button:
        id: button_instrucoes
        text: "Instruções"
        pos: logo.right, root.top-100
        size: self.texture_size[0] + dp(10), 100
        on_press: root.abrePopUpInstrucoes()
    Button:
        id: button_dados
        text: "Preencher Dados"
        pos: button_instrucoes.right, root.top-100
        size: self.texture_size[0] + dp(10), 100
        on_press: root.abrePopUpCadastro()
    Button:
        id: button_modelo
        text: "Carregar Modelo 3D"
        pos: button_dados.right, root.top-100
        size: self.texture_size[0] + dp(10), 100
        on_press: root.select_file()
    Button:
        id: button_relatório
        text: "Gerar Relatório"
        pos: button_modelo.right, root.top-100
        size: self.texture_size[0] + dp(10), 100
        on_press: root.gerar_relatorio()

    Label:
        id: label_inicio_nome
        text: "Nome: " + str(root.nome)
        pos: (logo.width/2), logo.top-logo.height - 1.5*self.height
        color: (0,0,0,1)
        font_size: 25
        size_hint: None, None
        size: self.texture_size
        halign: "left"
        valign: "bottom"
    Label:
        id: label_inicio_idade
        text: "Idade: " + str(root.idade)
        pos: label_inicio_nome.right - label_inicio_nome.width, label_inicio_nome.top - label_inicio_nome.height - 1.5*self.height
        color: (0,0,0,1)
        font_size: 25
        size_hint: None, None
        size: self.texture_size
        halign: "left"
        valign: "bottom"
    Label:
        id: label_inicio_peso
        text: "Peso: " + str(root.peso)
        pos: label_inicio_idade.right - label_inicio_idade.width, label_inicio_idade.top - label_inicio_idade.height - 1.5*self.height
        color: (0,0,0,1)
        font_size: 25
        size_hint: None, None
        size: self.texture_size
        halign: "left"
        valign: "bottom"
    Label:
        id: label_inicio_altura
        text: "Altura: " + str(root.altura)
        pos: label_inicio_peso.right - label_inicio_peso.width, label_inicio_peso.top - label_inicio_peso.height - 1.5*self.height
        color: (0,0,0,1)
        font_size: 25
        size_hint: None, None
        size: self.texture_size
        halign: "left"
        valign: "bottom"
    Label:
        id: label_inicio_sexo
        text: "Sexo: " + str(root.sexo)
        pos: label_inicio_altura.right - label_inicio_altura.width, label_inicio_altura.top - label_inicio_altura.height - 1.5*self.height
        color: (0,0,0,1)
        font_size: 25
        size_hint: None, None
        size: self.texture_size
        halign: "left"
        valign: "bottom"
    Label:
        id: label_inicio_etnia
        text: "Etnia: " + str(root.etnia)
        pos: label_inicio_sexo.right - label_inicio_sexo.width, label_inicio_sexo.top - label_inicio_sexo.height - 1.5*self.height
        color: (0,0,0,1)
        font_size: 25
        size_hint: None, None
        size: self.texture_size
        halign: "left"
        valign: "bottom"

<PopUpInstrucoes>
    FloatLayout:
        id: FloatLayout_Instrucoes
        canvas:
            Color:
                rgba: (1,0,0,1)
            RoundedRectangle:
                size : root.width, root.height
                pos : root.center_x - (root.width/2), root.center_y - (root.height/2)
                radius: [(40, 40), (40, 40), (40, 40), (40, 40)]


<PopUpCadastro>
    FloatLayout:
        id: FloatLayout_Cadastro
        size: (960, 540)
        canvas.before:
            Color:
                rgba: (0,1,0,1)
            RoundedRectangle:
                size : root.width, root.height
                pos : root.center_x - (root.width/2), root.center_y - (root.height/2)
                radius: [(40, 40), (40, 40), (40, 40), (40, 40)]

        TextInput:
            id: input_name
            hint_text:'Insira o seu nome'
            size_hint : 0.9, 0.15
            pos : root.center_x - (self.width/2), root.top - 1.5*(self.height)
            multiline: False
            font_size: self.height*0.6
            background_color: 1, 1, 1, 1
            cursor_color: 0, 0, 0, 1
            padding_x: 20
            input_type: 'text'

        Label:
            id: label_name
            text:'Nome'
            pos: input_name.right - input_name.width, input_name.top
            color: (0,0,0,1)
            size_hint: input_name.size_hint
            font_size: self.height*0.25
            text_size: self.size
            halign: "left"
            valign: "bottom"

        TextInput:
            id: input_idade
            hint_text:'Insira a sua idade'
            size_hint : 0.2, 0.15
            pos: input_name.right - input_name.width, input_name.top - input_name.height - 1.5*self.height
            multiline: False
            font_size: self.height*0.6
            background_color: 1, 1, 1, 1
            cursor_color: 0, 0, 0, 1
            padding_x: 20
            input_filter: 'int'

        Label:
            id: label_idade
            text:'Idade'
            pos: input_idade.right - input_idade.width, input_idade.top
            color: (0,0,0,1)
            size_hint: input_idade.size_hint
            font_size: self.height*0.25
            text_size: self.size
            halign: "left"
            valign: "bottom"

        TextInput:
            id: input_peso
            hint_text:'Insira o seu peso (g)'
            size_hint : 0.2, 0.15
            pos: input_name.center_x - (self.width/2), input_name.top - input_name.height - 1.5*self.height
            multiline: False
            font_size: self.height*0.6
            background_color: 1, 1, 1, 1
            cursor_color: 0, 0, 0, 1
            padding_x: 20
            input_filter: 'int'

        Label:
            id: label_peso
            text:'Peso (g)'
            pos: input_peso.right - input_peso.width, input_peso.top
            color: (0,0,0,1)
            size_hint: input_peso.size_hint
            font_size: self.height*0.25
            text_size: self.size
            halign: "left"
            valign: "bottom"
        
        TextInput:
            id: input_altura
            hint_text:'Altura (cm)'
            size_hint : 0.2, 0.15
            pos: input_name.right - self.width, input_name.top - input_name.height - 1.5*self.height
            multiline: False
            font_size: self.height*0.6
            background_color: 1, 1, 1, 1
            cursor_color: 0, 0, 0, 1
            padding_x: 20
            input_filter: 'int'

        Label:
            id: label_altura
            text:'Altura (cm)'
            pos: input_altura.right - input_altura.width, input_altura.top
            color: (0,0,0,1)
            size_hint: input_altura.size_hint
            font_size: self.height*0.25
            text_size: self.size
            halign: "left"
            valign: "bottom"

        Spinner:
            id: input_sexo
            text:'Insira o seu sexo'
            size_hint : 0.4, 0.15
            pos: input_idade.right - input_idade.width, input_idade.top - input_idade.height - 1.5*self.height
            multiline: False
            font_size: self.height*0.6
            background_color: 1, 1, 1, 1
            cursor_color: 0, 0, 0, 1
            padding_x: 20
            values: ["Masculino", "Feminino"]

        Label:
            id: label_sexo
            text:'Sexo'
            pos: input_sexo.right - input_sexo.width, input_sexo.top
            color: (0,0,0,1)
            size_hint: input_sexo.size_hint
            font_size: self.height*0.25
            text_size: self.size
            halign: "left"
            valign: "bottom"

        Spinner:
            id: input_etnia
            text:'Insira a sua etnia'
            size_hint : 0.4, 0.15
            pos: input_altura.right - self.width, input_altura.top - input_altura.height - 1.5*self.height
            multiline: False
            font_size: self.height*0.6
            background_color: 1, 1, 1, 1
            cursor_color: 0, 0, 0, 1
            padding_x: 20
            values: ["Etnia1", "Etnia2", "Etnia3", "Etnia4", "Etnia5"]

        Label:
            id: label_etnia
            text:'Etnia'
            pos: input_etnia.right - input_etnia.width, input_etnia.top
            color: (0,0,0,1)
            size_hint: input_etnia.size_hint
            font_size: self.height*0.25
            text_size: self.size
            halign: "left"
            valign: "bottom"

    Button:
        id: button_cadastrar
        text: "Salvar"
        size: 0.2*root.width, 0.15*root.height
        pos: input_name.center_x - (self.width/2), input_sexo.top - input_sexo.height - 1.25*self.height
        on_press: root.SalvaDadosCadastro()
        